@model Course

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Title of the document</title>
</head>

<body>
    <form asp-controller="Course" asp-action="CourseView">
        <div class="container">
            <div class="row">
                <div class="col-md-6 row">
                    <label asp-for="Name" class="col-md-2"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="Name" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <label asp-for="Code" class="col-md-2"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="Code" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <label asp-for="Batches" class="col-md-2"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="Batches" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <label asp-for="Description" class="col-md-2"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="Description" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <label asp-for="Duration" class="col-md-2"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="Duration" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <label asp-for="NumberOfClass" class="col-md-3"></label>
                    <div class=" form-group col-md-8">
                        <input asp-for="NumberOfClass" class="form-control"/>
                    </div>
                </div>
                
                <div class="col-md-6 row">
                    <input type ="submit" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</body>

</html>
